{
  "manifest_version": 2,
  "name": "Hüma Gezgini",
  "version": "1.8",
  "description": "Hüma Web Tarayıcısı için Hüma Gezgini",
  "browser_specific_settings": {
    "gecko": {
      "id": "humagezgini@humatarayici.com",
      "strict_min_version": "88.0a1"
    }
  },
  "author": "Egehan KAHRAMAN",
  "icons": {
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png"
    },
    "theme_icons": [
      {
        "light": "images/logo.png",
        "dark": "images/logo.png",
        "size": 16
      },
      {
        "light": "images/logo.png",
        "dark": "images/logo.png",
        "size": 32
      }
    ],
    "default_title": "Hüma Gezgini",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["popup/popup.js"]
  },
  "permissions": [
      "activeTab",
      "tabs",
      "bookmarks",
      "storage",
      "contextMenus"
  ],
  "options_page": "apps/ayarlar.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["apps/content.js"]
    }
  ],
  "sidebar_action": {
    "default_panel": "sidebar/sidebar.html",  
    "default_icon": "images/logo.png",
    "default_title": "Hüma Gezgini"
  }
}
